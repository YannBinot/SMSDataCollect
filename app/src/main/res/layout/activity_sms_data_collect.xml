<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sms_data_collect"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="rexad.com.smsdatacollect.SmsDataCollect">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="false"
            android:clipToPadding="false"
            android:layout_column="1"
            android:layout_row="1"
            android:minHeight="181dp"
            android:layout_weight="0.77">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <EditText
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/NomVillageEditText"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/NomDuVillage"
                    android:layout_toEndOf="@+id/NomDuVillage"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_text_style"
                    android:hint="Nom du Village"
                    android:layout_width="match_parent" />

                <EditText
                    android:layout_height="match_parent"
                    android:inputType="none"
                    android:ems="10"
                    android:layout_marginTop="15dp"
                    android:id="@+id/DateEditText"
                    android:layout_below="@+id/NomVillageEditText"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/NomDuVillage"
                    android:layout_toRightOf="@+id/NomDuVillage"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:background="@drawable/edit_text_style"
                    android:hint="Date  (JJ/MM/AAAA)"
                    android:layout_width="match_parent" />

                <EditText
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/MoisDeReferenceEditText"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/MoisDeReference"
                    android:layout_toEndOf="@+id/MoisDeReference"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_text_style"
                    android:hint="Mois de référence"
                    android:layout_width="match_parent" />

                <EditText
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/NomExpediteurEditText"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/NomExpediteur"
                    android:layout_toEndOf="@+id/NomExpediteur"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_text_style"
                    android:hint="Nom de l'expéditeur"
                    android:layout_width="match_parent" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginTop="15dp" />


                <EditText
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/M3CompteurForageDuMoisEditText"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/M3CompteurForageDuMois"
                    android:layout_toEndOf="@+id/M3CompteurForageDuMois"
                    android:layout_row="7"
                    android:layout_column="1"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_text_style"
                    android:hint="M3 compteur forage du mois "
                    android:layout_width="match_parent" />

                <EditText
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/M3CompteursBFDuMoisEditText"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/M3CompteursBFDuMois"
                    android:layout_toEndOf="@+id/M3CompteursBFDuMois"
                    android:layout_row="5"
                    android:layout_column="1"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_text_style"
                    android:hint="M3 compteurs BF du mois"
                    android:layout_width="match_parent" />

                <EditText
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/M3CompteursBPDuMoisEditText"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/M3CompteursBPDuMois"
                    android:layout_toEndOf="@+id/M3CompteursBPDuMois"
                    android:layout_row="6"
                    android:layout_column="1"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_text_style"
                    android:hint="M3 compteurs BP du mois"
                    android:layout_width="match_parent" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginTop="15dp" />

                <EditText
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/PaiementsEauDePMHDansLeMoisEditText"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/PaiementsEauDePMHDansLeMois"
                    android:layout_toEndOf="@+id/PaiementsEauDePMHDansLeMois"
                    android:layout_row="8"
                    android:layout_column="1"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_text_style"
                    android:hint="Paiements eau de PMH dans le mois"
                    android:layout_width="match_parent" />

                <EditText
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/FacturationBFetBPEnvoyeeCeMoisEditText"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/FacturationBFetBPEnvoyeeCeMois"
                    android:layout_toEndOf="@+id/FacturationBFetBPEnvoyeeCeMois"
                    android:layout_row="9"
                    android:layout_column="1"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_text_style"
                    android:hint="Facturation BF et BP envoyée ce mois"
                    android:layout_width="match_parent" />

                <EditText
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/PaiementsBFetBPrecusCeMoisEditText"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/PaiementsBFetBPrecusCeMois"
                    android:layout_toEndOf="@+id/PaiementsBFetBPrecusCeMoi"
                    android:layout_row="10"
                    android:layout_column="1"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_text_style"
                    android:hint="Paiements BF et BP reçus ce mois"
                    android:layout_width="match_parent" />

                <EditText
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/MontantMisEnCompteEpargneCeMoisEditText"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/MontantMisEnCompteEpargneCeMois"
                    android:layout_toEndOf="@+id/MontantMisEnCompteEpargneCeMois"
                    android:layout_row="11"
                    android:layout_column="1"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_text_style"
                    android:hint="Montant mis en compte d’épargne ce mois"
                    android:layout_width="match_parent" />

                <EditText
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/SoldeCompteEpargneEnFinDeMoisEditText"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/SoldeCompteEpargneEnFinDeMois"
                    android:layout_toEndOf="@+id/SoldeCompteEpargneEnFinDeMois"
                    android:layout_row="12"
                    android:layout_column="1"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_text_style"
                    android:hint="Solde compte d’épargne en fin de mois"
                    android:layout_width="match_parent" />

                <EditText
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/DepensesExceptionnellesDuMoisEditText"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/DepensesExceptionnellesDuMois"
                    android:layout_toEndOf="@+id/DepensesExceptionnellesDuMois"
                    android:layout_row="13"
                    android:layout_column="1"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_text_style"
                    android:hint="Dépenses exceptionnelles du mois (nvx équipts..)"
                    android:layout_width="match_parent" />

                <EditText
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/NatureDepenseExceptionnelleEditText"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/NatureDepenseExceptionnelle"
                    android:layout_toEndOf="@+id/NatureDepenseExceptionnelle"
                    android:layout_row="14"
                    android:layout_column="1"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_text_style"
                    android:hint="Nature dépense exceptionnelle"
                    android:layout_width="match_parent" />

            </LinearLayout>
        </ScrollView>

        <Button
            android:text="Ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/okButton"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_row="150"
            android:layout_column="1"
            android:layout_gravity="fill" />
    </LinearLayout>

</RelativeLayout>
